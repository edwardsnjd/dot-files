#!/usr/bin/env bash

# Usage: directory-browser
#
# fzf browse of rendered directories.

set -o nounset
#set -o errexit
set -o pipefail
#set -o xtrace

function Main {
  local preview="render {} --simple"
  local output="for f in {+}; do render \"\$f\"; echo; done"
  local display="paginate {+}"
  local edit="vim {+}"

  local magenta=$(tput setaf 5) # see terminfo
  local normal=$(tput sgr0) # see terminfo
  local nl=$'\n'
  local header1="∷ Display: ${magenta}C-/${normal} toggle preview, ${magenta}C-S${normal} toggle sort, ${magenta}A-a${normal} toggle all"
  local header2="∷ Actions: ${magenta}Enter${normal} display selected, ${magenta}A-Enter${normal} output selected"
  local header="${header1}${nl}${header2}"

  {
    echo "./"
    fd \
      --type directory \
      --hidden \
      --exclude '\.git' \
      --color=always \
      --max-depth=4
  } \
    | fzf \
      --reverse \
      --multi \
      --prompt "Directories(s)> " \
      --header "$header" \
      --preview "$preview" \
      --bind "ctrl-/:change-preview-window(bottom|hidden|default)" \
      --bind "ctrl-s:toggle-sort" \
      --bind "alt-a:toggle-all" \
      --bind "alt-enter:execute($output)" \
      --bind "enter:execute($display)"

  # Force happy exit code (expect to quit fzf with Ctrl-C)
  return 0
}

Main "$@"
