#!/usr/bin/env bash

# NAME
#   git-browse-log - fzf browse git log with preview
#
# USAGE
#   git-browse-log [git log args]

function GitBrowseLog {
  local pretty="tformat:%C(yellow)%h%C(reset) %C(dim magenta)%G?%C(reset) %s %C(cyan)<%an>%C(red)%d%C(reset)"
  local preview="echo {} | grep -Eo '[a-f0-9]{7,}' | head -1 | xargs git show --color --stat --patch | less -c -+F -+X"

  git log \
    --graph \
    --color \
    --pretty="$pretty" \
    --date=short \
    --decorate \
    --no-show-signature \
    "$@" \
    | fzf \
      --ansi \
      --layout=reverse-list \
      --no-sort \
      --preview="$preview" \
      --bind "ctrl-/:change-preview-window(bottom|hidden|default)" \
    | grep -Eo '[a-f0-9]{7,}' \
    | head -1
}

GitBrowseLog "$@"
