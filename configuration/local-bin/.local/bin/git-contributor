#!/usr/bin/env bash

# Usage: git-contributor
#   OR   git contributor
#
# Select the name and email of someone who has contributed to the current git
# repository.

{
  # Authors
  git log --pretty=tformat:"%aN <%aE>"
  # Committers
  git log --pretty=tformat:"%cN <%cE>"
} \
 | sort \
 | uniq \
 | fzf
