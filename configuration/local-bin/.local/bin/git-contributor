#!/usr/bin/env bash

# NAME
#   git-contributor - interactively select the name and email of someone who
#   has contributed to the current git repository.
#
# USAGE
#   git-contributor
#   git contributor

function GitContributor() {
  {
    # Authors
    git log --pretty=tformat:"%aN <%aE>"
    # Committers
    git log --pretty=tformat:"%cN <%cE>"
  } \
   | sort \
   | uniq \
   | fzf
}

GitContributor "$@"
