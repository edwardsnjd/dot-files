#!/usr/bin/env bash

# USAGE
#   git-related-files-chart PATH...
#   git related-files-chart PATH...
#
# OUTPUT
#   A pretty printed table of the related files.

set -o nounset
set -o errexit
set -o pipefail
#set -o xtrace

git-related-files-chart() {
  {
    echo "Path	Commits"
    git related-files "$@"
  } | pie-column 2 \
    | underline-headers
}

git-related-files-chart "$@"
