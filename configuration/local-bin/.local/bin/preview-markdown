#!/usr/bin/env bash

# USAGE
#   preview-markdown <PATH>
#
# DEPENDENCIES
#   pandoc

set -o nounset
set -o errexit
set -o pipefail
#set -o xtrace

Main() {
  local path="${1:?Must supply the path of the markdown file}"

  local dir="$(dirname $path)"
  local file="$(basename $path '.md')"

  local tmpdir="${TMPDIR:-/tmp/}${dir}"
  local tmp="${tmpdir}/${file}.html"

  mkdir -p "$tmpdir"

  pandoc \
    --standalone \
    --embed-resources \
    --mathjax \
    --output "$tmp" \
    --resource-path "$dir" \
    --variable=maxwidth="99vw" \
    "$@"

  open "$tmp"
}

Main "$@"
