#!/usr/bin/env bash

# NAME
#   git-browse-log2 - Interactive FZF browse of git lg
#
# USAGE
#   git browse-log2 [git lg options]

function GitBrowseLog2 {
  local preview="echo {} | grep -Eo '[a-f0-9]{7,}' | head -1 | xargs git show --color --stat | less -c -+F -+X"

  git lg -n5000 "$@" \
    | fzf \
      --ansi \
      --layout=reverse-list \
      --no-sort \
      --bind="enter:execute($preview)"
}

GitBrowseLog2 "$@"
