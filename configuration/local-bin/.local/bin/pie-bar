#!/usr/bin/env bash

# Pie bar
# Usage: pie-bar value1 value2 ...
# Dependencies: tput, seq, awk

function Main() {
  local use_color=1
  local cols="${COLS:-$(tput cols)}"
  while [[ $# -gt 0 ]]; do
    case $1 in
      --no-color) use_color=0 ;;
      --width) shift && cols="$1" ;;
      *) break ;;
    esac
    shift
  done

  local total="$(Total "$@")"

  local ind=0

  while [[ $# -gt 0 ]]; do
    local val=$1
    shift

    local char=$(PickCharacter $use_color $ind $val)

    local width=$(( $cols * $val / $total ))
    if [[ $width -gt 0 ]]; then
      seq 1 $width | while read; do printf "$char"; done
    fi

    ind=$(( $ind + 1 ))
  done
  printf "\n"
}

function Total() {
  echo "$@" | tr ' ' '\n' | awk '$1 >= 0 {t+=$1} END {print t}'
}

function PickCharacter() {
  local use_color=$1
  local ind=$2
  local val=$3

  local chars="▩▤▣▥▦▧▢▨"
  local colors="1234567"

  local char_index=$(( $ind % ${#chars} ))
  local color_index=$(( $ind % ${#colors} ))

  local char="${chars:$char_index:1}"
  local color="${colors:$color_index:1}"

  if [[ $use_color -eq 1 ]]; then
    printf "$(tput setaf $color)$char$(tput sgr0)"
  else
    printf "$char"
  fi
}

Main "$@"
